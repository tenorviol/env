./configure \
  --prefix=/usr/local \
  --with-curl \
  --with-zlib=/usr/local \
  --with-openssl \
  --with-mysql=mysqlnd \
  --with-mysqli=mysqlnd \
  --with-pdo-mysql=mysqlnd \
  --enable-fpm \
  --enable-inline-optimization \
  --enable-bcmath \
  --enable-mbstring \
  --enable-mbregex \
  --enable-pcntl \
  --with-gd \
  --enable-gd-native-ttf \
  --with-freetype-dir=/usr/local/lib \
  --with-jpeg-dir=/usr/local/lib \
  --with-png-dir=/usr/local \
  --with-xsl

make
make test
